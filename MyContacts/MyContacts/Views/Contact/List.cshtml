@model IEnumerable<MyContacts.Entities.Models.Contact>

@{
    ViewBag.Title = "List";
}

<h2>My Contacts</h2>

<div class="container mb-3 mt-3">
    <button type="button" class="btn btn-primary btn-add-new search-row-add-new" title="Add New" data-object-type="contact">
        <span class="hidden-xxs-down">
            Add New Contact
        </span>
        <i class="fa fa-plus hidden-xxs-up" aria-hidden="true"></i>
    </button>
    <table class="table table-striped table-bordered mydatatable" style="width: 100%">
        <thead>
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.Company.Company_name)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.First_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Last_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Web_site)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Company.Company_name)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.First_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Last_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Web_site)
                    </td>
                    <td>
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Copy Info...
                        </a>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="#">To Clipboard</a>
                            <a class="dropdown-item" href="#">To Clipboard (vCard)</a>
                            <a class="dropdown-item" href="#">To File (vCard)</a>
                        </div>
                    </td>
                    <td>
                        @*@Html.ActionLink("Details", "Details", new { id = item.Contact_key })*@
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Contact_key })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Contact_key })*@
                        <button type="button" class="btn btn-primary btn-details" title="Details">
                            <i class="fas fa-address-card" aria-hidden="true"></i>
                        </button>
                        <button type="button" class="btn btn-primary btn-edit" title="Edit">
                            <i class="fas fa-edit" aria-hidden="true"></i>
                        </button>
                        <button type="button" class="btn btn-primary btn-delete" title="Delete">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>

        <tfoot>

        </tfoot>

    </table>
</div>
