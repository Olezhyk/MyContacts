@model IEnumerable<MyContacts.Entities.Models.Contact>

@{
    ViewBag.Title = "List";
}

<h2>My Contacts</h2>

<div class="container mb-3 mt-3">
    <button type="button" class="btn btn-primary btn-add-new" title="Add New" data-object-type="contact">
        <span class="hidden-xxs-down">
            Add New Contact
        </span>
        <i class="fa fa-plus hidden-xxs-up" aria-hidden="true"></i>
    </button>
    <table class="table table-striped table-bordered mydatatable" style="width: 100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Company_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Last_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Web_site)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.Company_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.First_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Last_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Web_site)
                    </td>
                    <td>
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Copy Info...
                        </a>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item btn-load-vcard" href="#" data-object-key="@item.Contact_key" data-object-type="contact" data-export-type="copy-data" data-url="GetAddressData">To Clipboard</a>
                            <a class="dropdown-item btn-load-vcard" href="#" data-object-key="@item.Contact_key" data-object-type="contact" data-vcard-version="2.1" data-export-type="clipboard" data-url="GetVCardData">To Clipboard (vCard)</a>
                            <a class="dropdown-item btn-load-vcard" href="#" data-object-key="@item.Contact_key" data-object-type="contact" data-vcard-version="2.1" data-export-type="file" data-url="GetVCardData">To File (vCard)</a>
                        </div>
                    </td>
                    <td>
                        @*@Html.ActionLink("Details", "Details", new { id = item.Contact_key })*@
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Contact_key })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Contact_key })*@

                        <button type="button" class="btn btn-edit" data-object-key="@item.Contact_key" title="Edit">
                            <i class="fas fa-edit" aria-hidden="true"></i>
                        </button>
                        <button type="button" class="btn btn-delete" data-object-key="@item.Contact_key" title="Delete">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </td>
                </tr>

                <!-- Edit Modal -->
                <div class="modal fade" id="contactEdit" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
                    <form class="" id="saveEditContact" method="post" action="contact/edit">
                        <input type="hidden" name="ContactKey" value="" />
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalTitle">Edit Contact</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="inputFirstName">First name</label>
                                            <input type="text" class="form-control" id="inputFirstName" name="FirstName" placeholder="First name" value="">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="inputLastName">Last name</label>
                                            <input type="text" class="form-control" id="inputLastName" name="LastName" placeholder="Last name" value="">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputAddress">Address 1</label>
                                        <input type="text" class="form-control" id="inputAddress" name="Address1" placeholder="1234 Main St" value="">
                                    </div>
                                    <div class="form-group">
                                        <label for="inputAddress2">Address 2</label>
                                        <input type="text" class="form-control" id="inputAddress2" name="Address2" placeholder="Apartment, studio, or floor" value="">
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="inputCity">City</label>
                                            <input type="text" class="form-control" id="inputCity" name="City" value="" placeholder="City">
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="inputState">State</label>
                                            <input type="text" class="form-control" id="inputState" name="State" value="" placeholder="State">
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="inputZip">Zip</label>
                                            <input type="text" class="form-control" id="inputZip" name="Zip" value="" placeholder="Zip Code">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="inputEmail4">Email</label>
                                            <input type="email" class="form-control" id="inputEmail4" name="Email" value="" placeholder="Email">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="inputPhone4">Phone</label>
                                            <input type="tel" class="form-control" id="inputPhone4" name="Phone" value="" placeholder="Phone">
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary btn-save">Save</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- end Edit Modal -->
            }
        </tbody>
        <tfoot>
        </tfoot>
    </table>

    <!--Delete dialog-->
    <div class="modal" id="contactDelete" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p><b>Are you sure you want to delete record ?</b></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-yes"><strong>Yes</strong></button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"><strong>No</strong></button>
                </div>
            </div>
        </div>
    </div>
    <!--end Delete dialog-->

</div>
